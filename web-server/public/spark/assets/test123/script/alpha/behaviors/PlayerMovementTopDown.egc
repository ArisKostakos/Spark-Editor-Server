<?xml version="1.0" encoding="utf-8"?>
<Entity>
	<_States>
		<State>
			<Id>physicsEntity</Id>
			<Type>Boolean</Type>
			<Value>true</Value>
		</State>
		<State>
			<Id>physicsType</Id>
			<Type>Text</Type>
			<Value>Dynamic</Value>
		</State>
		<State><!--export-->
			<Id>physicsShape</Id>
			<Type>Text</Type>
			<Value>Polygon</Value>
		</State>
		<State><!--export-->
			<Id>physicsMaterial</Id>
			<Type>Text</Type>
			<Value>Wood</Value>
		</State>
		<State><!--export-->
			<Id>Up</Id>
			<Type>Boolean</Type>
			<Value>true</Value>
		</State>
		<State><!--export-->
			<Id>Down</Id>
			<Type>Boolean</Type>
			<Value>true</Value>
		</State>
		<State><!--export-->
			<Id>Left</Id>
			<Type>Boolean</Type>
			<Value>true</Value>
		</State>
		<State><!--export-->
			<Id>Right</Id>
			<Type>Boolean</Type>
			<Value>true</Value>
		</State>
		<State><!--export-->
			<Id>Force</Id>
			<Type>Decimal</Type>
			<Value>0</Value>
		</State>
	</_States>
	
	<_Triggers>
		<Trigger>
			<Event>KeyPressed_Up</Event>
			<Scripts>
				<Script>if (me.getState('Up')) me.startAction("GoUp");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyPressed_Down</Event>
			<Scripts>
				<Script>if (me.getState('Down')) me.startAction("GoDown");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyPressed_Left</Event>
			<Scripts>
				<Script>if (me.getState('Left')) me.startAction("GoLeft");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyPressed_Right</Event>
			<Scripts>
				<Script>if (me.getState('Right')) me.startAction("GoRight");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Up</Event>
			<Scripts>
				<Script>if (me.getState('Up')) me.stopAction("GoUp");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Down</Event>
			<Scripts>
				<Script>if (me.getState('Down')) me.stopAction("GoDown");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Left</Event>
			<Scripts>
				<Script>if (me.getState('Left')) me.stopAction("GoLeft");</Script>
			</Scripts>
		</Trigger>
		<Trigger>
			<Event>KeyReleased_Right</Event>
			<Scripts>
				<Script>if (me.getState('Right')) me.stopAction("GoRight");</Script>
			</Scripts>
		</Trigger>
	</_Triggers>
	
	<_Actions>
		<Action>
			<Id>GoLeft</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>
					Display.error('go left');
				</Script>
			</Scripts>
		</Action>
		<Action>
			<Id>GoRight</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>
					Display.error('go right');
				</Script>
			</Scripts>
		</Action>
		<Action>
			<Id>GoUp</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>
					Display.error('go up');
				</Script>
			</Scripts>
		</Action>
		<Action>
			<Id>GoDown</Id>
			<Concurrency>Persistent</Concurrency>
			<Scripts>
				<Script>
					Display.error('go down');
				</Script>
			</Scripts>
		</Action>
	</_Actions>
</Entity>